# =============================================================================
# TRADEWAVE ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env.local and fill in the values
# DO NOT COMMIT .env.local TO VERSION CONTROL

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL="postgresql://user:password@localhost:5432/tradewave"

# =============================================================================
# AUTHENTICATION
# =============================================================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-nextauth-secret-generate-with-openssl"
NEXTAUTH_URL="http://localhost:3000"

# =============================================================================
# API
# =============================================================================
API_BASE_URL="http://localhost:3000/api"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# =============================================================================
# EMAIL NOTIFICATIONS (Optional)
# =============================================================================
SENDGRID_API_KEY="your-sendgrid-key"
SENDGRID_FROM_EMAIL="noreply@tradewave.com"

# =============================================================================
# PAYMENT PROCESSOR (Stripe for FIAT payments)
# =============================================================================
STRIPE_PUBLIC_KEY="pk_test_your_stripe_public_key"
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# =============================================================================
# BLOCKCHAIN INFRASTRUCTURE
# =============================================================================

# Sepolia Testnet (Primary for MVP)
NEXT_PUBLIC_RPC_URL_SEPOLIA="https://sepolia.infura.io/v3/YOUR_INFURA_KEY"
SEPOLIA_RPC_URL="https://sepolia.infura.io/v3/YOUR_INFURA_KEY"

# Polygon Mumbai (Optional, for lower gas fees)
NEXT_PUBLIC_RPC_URL_POLYGON="https://polygon-mumbai.infura.io/v3/YOUR_INFURA_KEY"
POLYGON_RPC_URL="https://polygon-mumbai.infura.io/v3/YOUR_INFURA_KEY"

# Contract Deployment Keys (DO NOT EXPOSE PUBLICLY)
DEPLOYER_PRIVATE_KEY="your-deployer-wallet-private-key"
CONTRACT_OWNER_ADDRESS="0x..."

# Smart Contract Addresses (After Deployment)
NEXT_PUBLIC_TRADE_AGREEMENT_ADDRESS=""
NEXT_PUBLIC_DOCUMENT_VERIFICATION_ADDRESS=""
NEXT_PUBLIC_ESCROW_MANAGEMENT_ADDRESS=""
NEXT_PUBLIC_AUDIT_LOG_ADDRESS=""

# Blockchain Configuration
NEXT_PUBLIC_BLOCKCHAIN_NETWORK="sepolia"
NEXT_PUBLIC_CHAIN_ID="11155111"
BLOCKCHAIN_CONFIRMATIONS_REQUIRED="2"

# Wallet Configuration
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID="your-wallet-connect-id"
INFURA_API_KEY="your-infura-key"
ETHERSCAN_API_KEY="your-etherscan-key"

# =============================================================================
# ESCROW MANAGEMENT
# =============================================================================
ESCROW_ACCOUNT_NUMBER="your-escrow-bank-account"
ESCROW_BANK_DETAILS='{"bank":"Example Bank","routing":"123456789"}'
ESCROW_PROCESSING_FEE_PERCENT="2"

# =============================================================================
# SMART CONTRACTS & BLOCKCHAIN SETTINGS
# =============================================================================
SMART_CONTRACT_EXECUTION_DELAY_DAYS="1"
CONTRACT_AUDIT_LOG_ENABLED="true"
CONTRACT_NOTIFICATION_WEBHOOK="https://api.tradewave.io/webhooks/contracts"
GAS_PRICE_MULTIPLIER="1.2"
MAX_GAS_PRICE="100"

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
LOG_BLOCKCHAIN_TRANSACTIONS="true"
LOG_CONTRACT_DEPLOYMENTS="true"
BLOCK_EXPLORER_URL="https://sepolia.etherscan.io"
